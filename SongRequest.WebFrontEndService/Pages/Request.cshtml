@page
@model SongRequest.WebFrontEndService.Pages.RequestModel
@{
  ViewData["Title"] = "Request";
}

<h1 class="cover-heading">Request a song</h1>
<p class="lead">Complete the form below to submit your request. An artist name and song title are required.</p>

@if (Model.Feedback != null)
{
<div class="@Model.Feedback.GetDisplayClass()" role="alert">
  @Model.Feedback.Message
</div>
}

<form method="post">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label col-form-label-lg">Artist</label>
    <div class="col-sm-10">
      <input asp-for="SongRequest.Artist" class="form-control form-control-lg" />
      <span asp-validation-for="SongRequest.Artist"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label col-form-label-lg">Title</label>
    <div class="col-sm-10">
      <input asp-for="SongRequest.Title" class="form-control form-control-lg" />
      <span asp-validation-for="SongRequest.Title"></span>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label col-form-label-lg">Genre</label>
    <div class="col-sm-10">
      <select asp-for="SongRequest.Genre" class="form-control form-control-lg"
              asp-items="Html.GetEnumSelectList<Models.GenreOptions>()"></select>
    </div>
  </div>
  <button type="submit" class="btn btn-lg btn-dark">Submit</button>
</form>